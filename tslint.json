{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "rules": {
    "jsx-no-lambda": false,
    "interface-name": false,
    "no-angle-bracket-type-assertion": false,
    "react-hooks-nesting": "error",
    "ordered-imports": [
      false
    ],
    "quotemark": [
      true,
      "double",
      "avoid-escape",
      "avoid-template"
    ],
    "object-literal-sort-keys": [
      false
    ],
    "no-console": false,
    "member-access": [
      false
    ],
    "jsdoc-format": false,
    "object-literal-shorthand": false,
    "no-shadowed-variable": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}
